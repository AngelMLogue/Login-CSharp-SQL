@model IEnumerable<URP.Models.Subjects>

@{
    ViewBag.Title = "Index";
    var MName = ViewBag.Materia as IEnumerable<URP.Models.Subjects>;
    var GName = ViewBag.Grado as string;
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 10px;
    }

    h4 {
        color: #333;
        margin-bottom: 10px;
    }

    p {
        color: #555;
    }

    img {
        max-width: 100%;
        height: auto;
        margin-bottom: 20px;
    }

    #player {
        margin-top: 20px;
        position: relative;
        padding-bottom: 56.25%;
        height: 0;
    }

        #player iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

    table {
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 20px;
        padding: 20px;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: dimgrey;
        cursor: pointer;
    }

    td:hover {
        color: white;
    }
</style>

@if (MName != null && MName.Any())
{
    <br />
    <h4>Usted está en <b>@GName</b></h4>
    <table>
        <tr>
            <th>
                SUS MATERIAS SON:
            </th>
        </tr>

        @foreach (var item in MName)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SName)
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>No se encontraron materias para el grado @GName.</p>
}

<img src="~/Images/HorarioNovenoCuatrimestre.jpg" alt="Horario" />
<br />
<br />
<img src="~/Images/UteImagen.png" alt="Logo UTE" />

<div id="player">
    <br />
    <iframe width="640" height="360" src="https://www.youtube.com/embed/xhgg7CL5wyQ" frameborder="0" allowfullscreen></iframe>
</div>

<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script>
        Toastify({

            text: "Sesion Iniciada",
            style: {
                background: "linear-gradient(to right, #00b09b, #96c93d)",
            },
            duration: 3000

        }).showToast();
</script>
