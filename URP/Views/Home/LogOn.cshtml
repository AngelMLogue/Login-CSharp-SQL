@{
    ViewBag.Title = "LogOn";
    Layout = "~/Views/Shared/_LayoutLog.cshtml";
}

<style>
    body {
        background-image: url('https://scontent.fntr8-1.fna.fbcdn.net/v/t39.30808-6/308625659_434700215418398_2067395121296204720_n.jpg?_nc_cat=104&ccb=1-7&_nc_sid=e3f864&_nc_ohc=61CEapX373IAX97Do8T&_nc_ht=scontent.fntr8-1.fna&oh=00_AfBaLAv31ffN7ocjHBXGCgDJJcjgAvBbdeGopWCpomynFw&oe=649F8A89');
        background-size: cover;
        background-position: center;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    form {
        backdrop-filter: blur(5px);
        padding: 50px;
        border-radius: 5px;
        color: white; /* Añadido para que el texto dentro del formulario sea blanco */
        width: 300px;
    }

    .form-group {
        margin-bottom: 10px;
        display: flex;
        flex-direction: column; /* Cambiado a una disposición de columna */
    }

    label {
        font-weight: bold;
        margin-bottom: 5px; /* Espacio adicional debajo de las etiquetas */
    }

    input[type="text"],
    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 3px;
        color: black;
    }

    .btn {
        padding: 8px 16px;
        background-color: #343a40;
        color: #fff;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    .alert-danger {
        background-color: #f44336;
        color: #fff;
        padding: 10px;
        margin-bottom: 20px;
    }

        .alert-danger a {
            color: #fff;
            text-decoration: underline;
        }

    .registration-link {
        text-align: center;
        margin-top: 20px;
    }
</style>

<div class="container">
    <form action="@Url.Content("~/Home/LogOn")" method="post">
        <h2>Registrate</h2>
        <div class="form-container">
            <div class="form-group">
                <label>Nombre de usuario</label>
                <input type="text" name="UName" />
            </div>
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" name="URealName" />
            </div>
            <div class="form-group">
                <label>Apellido</label>
                <input type="text" name="ULastName" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="UEmail" />
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <input type="password" name="UPassword" />
            </div>
            <div class="form-group">
                <label>Confirmar contraseña</label>
                <input type="password" name="UConfirmPassword" />
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-success" />
            </div>
        </div>
        @if (ViewData["Mensaje"] != null)
        {
            <div class="alert-danger" role="alert">
                @ViewData["Mensaje"]
            </div>
        }
        <a href="@Url.Action("LogIn", "Home")" class="btn btn-success">Regresar</a>
    </form>
</div>
